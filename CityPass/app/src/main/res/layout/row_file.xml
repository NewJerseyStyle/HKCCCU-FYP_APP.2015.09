<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="70dp"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:background="#ffffff">

    <ImageView
        android:id="@+id/file_format_icon"
        android:layout_width="40dp"
        android:layout_height="44dp"
        android:src="@drawable/unknown_icon"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"></ImageView>

    <TextView
        android:id="@+id/file_name"
        android:textColor="#000000"
        android:text="Chapter 1 - Introductu...Algorithms.ppt"
        android:textSize="14dp"
        android:layout_width="265dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:layout_marginLeft="6dp"
        android:layout_marginStart="20dp"
        android:layout_alignTop="@+id/file_format_icon"
        android:layout_toRightOf="@+id/file_format_icon"
        android:layout_toEndOf="@+id/file_format_icon"
        android:typeface="normal"
        android:phoneNumber="false"
        android:width="250dp"
        android:maxLength="200"></TextView>

    <TextView
        android:text="sub-text"
        android:id="@+id/file_course"
        android:textColor="#B8B8C7"
        android:layout_width="260dp"
        android:layout_height="wrap_content"
        android:textSize="13dp"
        android:layout_alignBottom="@+id/file_format_icon"
        android:layout_alignLeft="@+id/file_name"
        android:layout_alignStart="@+id/file_name"
        android:singleLine="true"
        android:maxLines="1">


    </TextView>

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/selected_file"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="11dp"
        android:layout_marginEnd="11dp"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:checked="false"
        android:clickable="false" />

</RelativeLayout>