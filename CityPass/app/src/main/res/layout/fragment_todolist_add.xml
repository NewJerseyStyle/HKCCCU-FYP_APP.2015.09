<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:layout_below="@+id/textView_title">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:id="@+id/linearlayout">


            <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="10dp"
                card_view:cardBackgroundColor="@color/cardview_light_background"
                card_view:cardCornerRadius="1dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:text="Add New Event"
                        android:id="@+id/my_details_label"
                        android:paddingTop="10dp"
                        android:paddingLeft="15dp"
                        android:paddingRight="10dp"
                        android:paddingBottom="10dp"
                        android:textStyle="bold"
                        android:background="@color/holo_blue_dark"
                        android:textColor="@color/white" />


                    <RelativeLayout
                        android:id="@+id/Event"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:paddingLeft="10dp"
                        android:paddingRight="10dp"
                        android:orientation="vertical">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Name"
                            android:id="@+id/name_label"
                            android:layout_marginTop="20dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="13dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/editText_name"
                            android:background="@drawable/button"
                            android:layout_below="@+id/name_label"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Date"
                            android:id="@+id/date_label"
                            android:layout_below="@+id/editText_name"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="13dp" />

                        <EditText
                            android:layout_height="wrap_content"
                            android:layout_width="match_parent"
                            android:id="@+id/textView_date"
                            android:background="@drawable/button"
                            android:layout_below="@+id/date_label"
                            android:padding="5dp" />


                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Time"
                            android:id="@+id/time_label"
                            android:layout_below="@+id/textView_date"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="13dp" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/textView_time1"
                            android:layout_below="@+id/time_label"
                            android:background="@drawable/button"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:text="To"
                            android:id="@+id/time_to"
                            android:layout_toRightOf="@+id/textView_time1"
                            android:layout_below="@+id/time_label"
                            android:padding="5dp"
                            android:layout_marginLeft="10dp"
                            android:layout_marginRight="10dp"
                            android:textSize="13dp" />

                        <EditText
                            android:layout_width="120dp"
                            android:layout_height="wrap_content"
                            android:layout_below="@+id/time_label"
                            android:layout_toRightOf="@+id/time_to"
                            android:id="@+id/editText_time2"
                            android:background="@drawable/button"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Location"
                            android:id="@+id/location_label"
                            android:layout_below="@+id/textView_time1"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="5dp"
                            android:textSize="13dp" />

                        <EditText
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center_horizontal"
                            android:id="@+id/textView_location"
                            android:layout_below="@+id/location_label"
                            android:background="@drawable/button"
                            android:padding="5dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Notification"
                            android:id="@+id/notification_label"
                            android:layout_below="@+id/textView_location"
                            android:layout_marginTop="10dp"
                            android:layout_marginBottom="10dp"

                            android:textSize="13dp" />

                        <RadioGroup
                            android:id="@+id/radiogroup1"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_below="@+id/notification_label"
                            android:layout_marginBottom="20dp">

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Yes"
                                android:id="@+id/radioButton1"
                                android:layout_marginRight="10dp"
                                android:layout_below="@+id/notification_label" />

                            <RadioButton
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="No"
                                android:id="@+id/radioButton2"
                                android:layout_toRightOf="@+id/radioButton1"
                                android:layout_below="@+id/notification_label" />
                        </RadioGroup>


                    </RelativeLayout>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <RelativeLayout
                android:id="@+id/Event2"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="45dp"
                    android:text="Cancel"
                    android:id="@+id/button_cancel"
                    android:layout_alignParentTop="true"
                    android:layout_toLeftOf="@+id/button_submit"
                    android:layout_toStartOf="@+id/button_submit"
                    android:layout_marginRight="15dp"
                    android:layout_marginEnd="15dp" />

                <Button
                    android:layout_width="wrap_content"
                    android:layout_height="35dp"
                    android:text="Submit"
                    android:textColor="#ffffff"
                    android:background="@color/holo_blue_dark"
                    android:id="@+id/button_submit"

                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_alignParentEnd="true" />
            </RelativeLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>


