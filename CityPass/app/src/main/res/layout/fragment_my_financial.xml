<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"

    android:weightSum="1">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:text="My Financial"
        android:id="@+id/my_details_label"

        android:layout_marginTop="10dp"
        android:paddingTop="5dp"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:paddingBottom="10dp"
        android:background="@drawable/title"
        android:textStyle="bold" />

    <android.support.v7.widget.CardView xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp"
        card_view:cardBackgroundColor="@color/cardview_light_background"
        card_view:cardCornerRadius="1dp">

        <!--        android:layout_marginLeft="15dp"
        android:layout_marginTop="20dp"
        android:layout_marginRight="15dp"
-->
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"

            android:layout_weight="1.27">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:textAppearance="?android:attr/textAppearanceLarge"
                android:text="The Latest  Account Summary"
                android:id="@+id/textView316"
                android:background="@drawable/financialtitle"
                android:textColor="#ffffff"
                android:paddingLeft="15dp"
                android:paddingTop="8dp"
                android:textStyle="bold"
                android:textSize="16dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:paddingBottom="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Release Date:"
                android:id="@+id/textView317"
                android:layout_marginLeft="22dp"
                android:layout_marginStart="22dp"
                android:textSize="13dp"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Due Date:"
                android:id="@+id/TextView325"
                android:textSize="13dp"
                android:layout_marginTop="7dp"
                android:layout_below="@+id/textView317"
                android:layout_alignLeft="@+id/textView317"
                android:layout_alignStart="@+id/textView317" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="Balance: "
                android:id="@+id/textView319"
                android:textSize="13dp"
                android:layout_marginTop="8dp"
                android:layout_below="@+id/TextView325"
                android:layout_alignLeft="@+id/TextView325"
                android:layout_alignStart="@+id/TextView325" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="It&apos;s just loading..."
                android:id="@+id/releaseDate"
                android:textSize="13dp"
                android:textStyle="bold"
                android:layout_marginLeft="11dp"
                android:layout_marginStart="11dp"
                android:layout_alignTop="@+id/textView317"
                android:layout_toRightOf="@+id/textView317"
                android:layout_toEndOf="@+id/textView317" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="It&apos;s just loading..."
                android:id="@+id/dueDate"
                android:textSize="13dp"
                android:layout_toRightOf="@+id/TextView325"
                android:layout_toEndOf="@+id/TextView325"
                android:layout_marginLeft="10dp"
                android:layout_marginStart="10dp"
                android:layout_alignTop="@+id/TextView325" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:text="It&apos;s just loading..."
                android:id="@+id/balance"
                android:textSize="13dp"
                android:layout_alignTop="@+id/textView319"
                android:layout_alignLeft="@+id/dueDate"
                android:layout_alignStart="@+id/dueDate" />
        </RelativeLayout>
    </android.support.v7.widget.CardView>
</LinearLayout>